generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
}

model User {
  user_id                 Int
  login_day               String
  login_time              String  @default("")
  logout_time             String  @default("")
  company_name            String
  is_qustionnaire         Boolean @default(false)
  is_lottery              Boolean @default(false)
  is_personal_information Boolean @default(false)
  is_delete               Boolean @default(false)

  @@id([user_id, login_day])
}

model Questionary {
  id          Int     @id @default(autoincrement())
  anser_id    Int
  answer_date String
  update_time String  @default("")
  is_delete   Boolean @default(false)
}
